<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:type="linear"
                android:endColor="#ddd"
                android:startColor="#ddd"
                android:angle="90.0" />
            <corners android:radius="4sp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="3px" android:color="#00FF00" />
            <gradient
                android:type="linear"
                android:endColor="#ddd"
                android:startColor="#ddd"
                android:angle="90.0" />
            <corners android:radius="4sp" />
        </shape>
    </item>

</selector>